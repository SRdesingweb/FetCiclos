<div class="container-fluid p-8">
    <div class="row">
        <div class="col-md-4 mx.auto">

            <div class="card">
                <div class="card-body">
                    <form action="" method="post">
                        <div class="form-group">
                            {{!-- <label for="last_name">role</label> --}}
                            <input required type="hidden" class="form-control" id="role_id" name="role_id" value="2">
                        </div>
                        <div class="form-group">
                            <label for="first_name">Nombre</label>
                            <input required type="text" class="form-control" id="first_name" name="first_name" placeholder="Tú nombre">
                        </div>
                        <div class="form-group">
                            <label for="last_name">Apellido</label>
                            <input required type="text" class="form-control" id="last_name" name="last_name"
                                placeholder="Tú Apellido">
                        </div>

                        <div class="form-group">
                            <label for="document_number">Número de documento</label>
                            <input required class="form-control" type="number" id="document_number"
                                name="document_number"></input>
                        </div>
                        <div class="form-group">
                            <label for="document_type">Tipo de Documento</label>
                            <select class="form-control" id="document_type">
                                <option value="Cédula de Ciudadanía">Cédula de Ciudadanía</option>
                                <option value="Cédula de Ciudadanía">Cédula de Extrangería</option>
                                <option value="Pasaporte">Pasaporte</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="eps_id">EPS</label>
                            <select class="form-control" id="eps_id" name="eps_id">
                                {{#each epss}}
                                <option value="{{id}}">{{name}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="telephone">Teléfono</label>
                            <input required class="form-control" type="tel" id="telephone" name="telephone" placeholder="314-456-968" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"></input>
                        </div>
                        <div class="form-group">
                            <label for="password">E-mail</label>
                            <input required class="form-control" type="email" id="email" name="email"></input>
                        </div>
                        <div class="form-group">
                            <label for="password">Contraseña</label>
                            <input required class="form-control" type="password" id="password" name="password"></input>
                        </div>
                        <button class="btn btn-primary mb-2">Añadir </button>

                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="table-responsive">
                <table class="table table-sm ">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Apellido</th>
                            <th scope="col">Teléfono</th>
                            <th scope="col">Mail</th>
                            <th scope="col">Número de documento</th>
                            <th scope="col">Rol</th>
                            <th scope="col">EPS</th>
                            <th scope="col" colspan="3">Operación</th>

                        </tr>
                    </thead>
                    <tbody>
                        {{#each users}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <td scope="row">{{first_name}} {{middle_name}}</td>
                            <td scope="row">{{last_name}} {{second_last_name}}</td>
                            <td scope="row">{{telephone}}</td>
                            <th scope="row">{{email}}</th>
                            <td scope="row">{{document_number}}</td>
                            <th scope="row">{{role_name}}</th>
                            <td>{{eps_name}}</td>
                            <td>
                                <!--
                                <a href="./edit/{{id}}" class="btn btn col-8">
                                    <i class="fas fa-shedule"></i>
                                </a>
                                -->
                            </td>
                            <td>
                                <a href="./edit/{{id}}" class="btn btn col-8">
                                    <i class="fas fa-pen"></i>
                                </a>
                            </td>
                            <td>
                                <a href="./delete/{{id}}" class="btn btn col-8">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>