<div class="container-fluid p-8">
    {{#each users}}
    <div class="row">
        <div class="col-md-8 mx.auto">
            <div class="card">
                <div class="card-body">
                    <form action="" method="post">
                        <div class="form-group">
                            <!-- <label for="last_name">role</label> -->
                            <input required type="hidden" class="form-control" id="role_id" name="role_id"
                                value="{{role_id}}">
                        </div>
                        <div class="form-group">
                            <label for="first_name">Nombre</label>
                            <input required type="text" class="form-control" id="first_name" name="first_name"
                                value="{{first_name}}" placeholder="Tú nombre">
                        </div>
                        <div class="form-group">
                            <label for="last_name">Apellido</label>
                            <input required type="text" class="form-control" id="last_name" name="last_name"
                                value="{{last_name}}" placeholder="Tú Apellido">
                        </div>

                        <div class="form-group">
                            <label for="document_number">Número de documento</label>
                            <input required class="form-control" type="number" id="document_number"
                                name="document_number" value="document_number" ></input>
                        </div>
                        <div class="form-group">
                            <label for="document_type">Tipo de Documento</label>
                            <select class="form-control" id="document_type">
                                <option value="Cédula de Ciudadanía">Cédula de Ciudadanía</option>
                                <option value="Cédula de Ciudadanía">Cédula de Extrangería</option>
                                <option value="Pasaporte">Pasaporte</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="telephone">Teléfono</label>
                            <input required class="form-control" type="tel" id="telephone" name="telephone"
                                value="{{telephone}}" placeholder="314-456-968"
                                pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"></input>
                        </div>
                        <div class="form-group">
                            <label for="password">E-mail</label>
                            <input required class="form-control" type="email" id="email" name="email"
                                value="{{email}}"></input>
                        </div>
                        <button class="btn btn-primary mb-2">Editar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>