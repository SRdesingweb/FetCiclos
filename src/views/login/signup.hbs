<div class="container col-md-8">
  <h3> Registrar Usuario </h3>
  <form>
    <div class="row">
      <div class="col">
        <div class="form-group row">
          <label for="user_name" class="col-4 col-form-label"></label>
          <div class="col-8">
            <input id="user_name" name="user_name" placeholder="Usuario" type="text" class="form-control"
              required="required">
          </div>
        </div>
        <div class="form-group row">
          <label class="col-4 col-form-label" for="user_password"></label>
          <div class="col-8">
            <input id="user_password" name="user_password" placeholder="contraseña" type="text" class="form-control"
              required="required">
          </div>
        </div>
        <div class="form-group row">
          <label for="name" class="col-4 col-form-label"></label>
          <div class="col-8">
            <input id="name" name="name" placeholder="nombre" type="text" class="form-control" required="required">
          </div>
        </div>
        <div class="form-group row">
          <label class="col-4 col-form-label" for="middle_name"></label>
          <div class="col-8">
            <input id="middle_name" name="middle_name" placeholder="Segundo nombre" type="text" class="form-control"
              required="required">
          </div>
        </div>
        <div class="form-group row">
          <label for="last_name" class="col-4 col-form-label"></label>
          <div class="col-8">
            <input id="last_name" name="last_name" placeholder="Apellido" type="text" class="form-control"
              required="required">
          </div>
        </div>
        <div class="form-group row">
          <label class="col-4 col-form-label" for="second_last_name"></label>
          <div class="col-8">
            <input id="second_last_name" name="second_last_name" placeholder="Segundo Apellido" type="text"
              class="form-control" required="required">
          </div>
        </div>
      </div>
      <div class="col">
        <div class="form-group row">
          <label class="col-4 col-form-label" for="card_id"></label>
          <div class="col-8">
            <input id="card_id" name="card_id" placeholder="Número de identificación" type="text" class="form-control"
              required="required">
          </div>
        </div>
        <div class="form-group row">
          <label class="col-4 col-form-label" for="birth_date"></label>
          <div class="col-8">
            <input id="birth_date" name="birth_date" placeholder="Fecha de Nacimiento" type="date" class="form-control"
              required="required">
          </div>
        </div>
        <div class="form-group row">
          <label class="col-4 col-form-label" for="email_address"></label>
          <div class="col-8">
            <input id="email_address" name="email_address" placeholder="E-mail" type="email" class="form-control"
              required="required">
          </div>
        </div>
        <div class="form-group row">
          <label class="col-4 col-form-label" for="telephone"></label>
          <div class="col-8">
            <input id="telephone" name="telephone" placeholder="Teléfono" type="tel" class="form-control"
              required="required">
          </div>
        </div>
        <div class=" form-group row">
            <label class="col-4 col-form-label" for="is_active"></label>
            <div class="col-8">
              <input id="is_active" name="is_active" placeholder="Segundo Apellido" type="text" class="form-control"
                required="required">
            </div>
          </div>
          <div class="form-group row">
            <div class="offset-4 col-8">
              <button name="submit" type="submit" class="btn btn-primary">Registrar</button>
            </div>
          </div>
        </div>
      </div>

  </form>

</div>
